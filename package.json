{
  "name": "data",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest src",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "build": "babel src --out-dir dist",
    "test:test": "jest test-specs",
    "test:ci": "npm test -- --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@types/jest": "^24.0.23",
    "babel-jest": "^24.9.0",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.9.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "jest": true
    },
    "rules": {
      "quotes": "off",
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "import/prefer-default-export": "warn"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
